<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
	</startup>
	<appSettings>
		<!-- Set to "false" when you are ready to use the real Chafon hardware -->
		<add key="UseMockReader" value="true" />
	</appSettings>
	<connectionStrings>
		<!-- 
            ========================================================================================
            CORRECTED CONNECTION STRING:
            For local development with SQLEXPRESS and the built-in 'System.Data.SqlClient' provider,
            it is standard to set Encrypt=False. This tells the driver not to attempt SSL/TLS,
            avoiding certificate errors. The 'Trust Server Certificate' keyword has been removed
            because it is not supported by this provider.
            ========================================================================================
        -->
		<add name="DefaultConnection"
             connectionString="Data Source=DESKTOP-DMK9TIG\SQLEXPRESS;Initial Catalog=TrackPoint;Integrated Security=True;Encrypt=False"
             providerName="System.Data.SqlClient" />
	</connectionStrings>
</configuration>